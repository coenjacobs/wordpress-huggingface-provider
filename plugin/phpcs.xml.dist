<?xml version="1.0"?>
<!--suppress XmlUnboundNsPrefix -->
<ruleset name="huggingface-provider">
    <description>Coding standard ruleset based on the PSR-12 coding standard.</description>
    <rule ref="PSR12"/>

    <rule ref="PHPCompatibility"/>
    <config name="testVersion" value="7.4-8.5"/>

    <!-- Raise line length warning to accommodate prefixed dependency namespaces in use statements -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="160" />
        </properties>
    </rule>

    <file>./src</file>
    <exclude-pattern>./src/Dependencies</exclude-pattern>
</ruleset>
